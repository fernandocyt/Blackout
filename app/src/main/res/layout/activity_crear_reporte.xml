<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="losmarinos.blackout.CrearReporte">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl_servicio_crear_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio"
                android:layout_margin="5dp"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spn_servicios_crear_reporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:background="#D8D8D8"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center">

                <TextView
                    android:id="@+id/lbl_empresa_crear_reporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Empresa*"
                    android:layout_margin="5dp"
                    android:textSize="20sp"/>

                <Spinner
                    android:id="@+id/spn_empresas_crear_reporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="#D8D8D8"/>

        </LinearLayout>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map_crear_reporte"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/lbl_radio_crear_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio"
                android:layout_margin="10dp"
                android:textSize="20sp"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" />

            <SeekBar
                android:id="@+id/skb_radio_crear_reporte"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/lbl_km_radio_crear_reporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0m" />


        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Reporte"
            android:layout_gravity="center"
            android:onClick="crearReporte"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
